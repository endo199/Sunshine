<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suhendro.sunshine.app.ForecastFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Today, June 24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate" />

        <TextView
            android:text="21\u00B0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:id="@+id/txtTemperatur" />

        <TextView
            android:text="8\u00B0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTemperatur"
            android:layout_marginTop="20dp"
            android:id="@+id/txtTemperatur2" />

        <TextView
            android:text="Cloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:drawableTop="@android:drawable/btn_star_big_on"
            android:layout_below="@+id/txtDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="123dp"
            android:layout_marginEnd="123dp"
            android:layout_marginTop="7dp" />
    </RelativeLayout>
</FrameLayout>
